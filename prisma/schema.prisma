// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Categoria {
  id     Int      @id @default(autoincrement())
  nome   String
  cor    String
  icone  String
  Tarefa Tarefa[]
}

model Lembrete {
  id          Int      @id @default(autoincrement())
  popUp       Boolean
  popUpMsg    String
  alarme      Boolean
  alarmeSound String
  vibracao    Boolean
  vibType     String
  vibCount    Int
  notificacao String
  Tarefa      Tarefa[]
}

model LembretePadrao {
  id   Int    @id @default(autoincrement())
  nome String
}

model Rotina {
  id      Int      @id @default(autoincrement())
  nome    String
  duracao String
  tarefas Tarefa[]
}

model Tarefa {
  id          Int       @id @default(autoincrement())
  nome        String
  tempoIni    String
  tempoFim    String
  categoria   Categoria @relation(fields: [categoriaId], references: [id])
  lembrete    Lembrete  @relation(fields: [lembreteId], references: [id])
  Rotina      Rotina?   @relation(fields: [rotinaId], references: [id])
  rotinaId    Int?
  categoriaId Int
  lembreteId  Int
}
