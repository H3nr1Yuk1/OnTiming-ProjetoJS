// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Usuario {
  id               Int              @id @default(autoincrement())
  nome             String
  email            String           @unique
  senha            String
  rotinas          Rotina[]
  tarefas          Tarefa[]
  categorias       Categoria[]
  lembretes        Lembrete[]
  lembretes_padrao LembretePadrao[]
}

model Categoria {
  id        Int      @id @default(autoincrement())
  nome      String   @unique
  cor       String   @unique
  icone     String   @unique
  tarefa    Tarefa[]
  usuarioId Int
  usuario   Usuario  @relation(fields: [usuarioId], references: [id])
}

model Lembrete {
  id          Int      @id @default(autoincrement())
  popUp       Boolean?
  popUpMsg    String?
  alarme      Boolean?
  alarmeSound String?
  vibracao    Boolean?
  vibType     String?
  vibCount    Int?
  notificacao String
  tarefa      Tarefa[]
  usuarioId   Int
  usuario     Usuario  @relation(fields: [usuarioId], references: [id])
}

model LembretePadrao {
  id        Int     @id @default(autoincrement())
  nome      String
  usuarioId Int
  usuario   Usuario @relation(fields: [usuarioId], references: [id])
}

model Rotina {
  id        Int      @id @default(autoincrement())
  nome      String
  duracao   String
  tarefas   Tarefa[]
  usuarioId Int
  usuario   Usuario  @relation(fields: [usuarioId], references: [id])
}

model Tarefa {
  id          Int       @id @default(autoincrement())
  nome        String?
  tempoIni    String
  tempoFim    String
  categoria   Categoria @relation(fields: [categoriaId], references: [id])
  lembrete    Lembrete? @relation(fields: [lembreteId], references: [id])
  rotina      Rotina?   @relation(fields: [rotinaId], references: [id])
  rotinaId    Int?
  categoriaId Int
  lembreteId  Int?
  usuarioId   Int
  usuario     Usuario   @relation(fields: [usuarioId], references: [id])
}
